def BUILD = "$BUILD_NUMBER"
def IMAGE_REPO = "maheshgprasad/app-1"
def SERVICE = "app-1_web"
pipeline {
    environment {
        registry = 'maheshgprasad/{tbd}'
        registryCredentials = '' //get token from hub.docker.com
        dockerImage = ''
    }
    agent any

    stages {
        stage('Git Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'jenkins_git_auth', url: 'https://github.com/maheshgprasad/project-aetna.git/']]])
            }
        }
        stage('Docker Build') {
            steps {
                script {
                    dockerImage = docker.build registry + ":$BUILD_NUMBER"
                }
            }
        }
        stage('Docker Push') {
            steps {
                script{
                    docker.withRegistry( '' , registryCredentials) {
                    dockerImage.push()
                }
                }
            }
        }
        stage('Update Service') {
            steps {
                sh "docker service update --image $IMAGE_REPO:$BUILD $SERVICE"
            }
        }

    }
}